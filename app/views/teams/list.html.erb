<%= stylesheet_link_tag "style.css" %>
<h1>Teams</h1>
<table class="table-striped">
	<thead>
		<tr>
			<th>Key</th>
			<th>Name</th>
			<th>Number</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	
	<tbody>
		<% @teams.each do |team| %>
			<tr>
				<td><%= team.key %></td>
				<td><%= team.name %></td>
				<td><%= team.number %></td>
				<td><%= link_to "Show", :action => :show, :team => team.number %></td>
			</tr>
		<% end %>
	</tbody>
</table>
